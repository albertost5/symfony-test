{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1>User index</h1>

    <table class="table table-dark text-center">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Email</th>
                <th scope="col">Roles</th>
                <th scope="col">Password</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>
                {# {% if "ROLE_ADMIN" in user.roles  %} #}
                    <a class="btn btn-warning btn-sm" href="{{ path('user_edit', {'id': user.id}) }}">Editar</a>
                    <a class="btn btn-danger btn-sm" href="{{ path('user_delete', {'id': user.id}) }}">Borrar</a>
                {# {% endif %} #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No hay registros.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('user_new') }}">Crear Nuevo</a>
{% endblock %}
